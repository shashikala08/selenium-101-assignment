<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Selenium101Suite" parallel="tests" thread-count="3">
  <test name="SimpleFormDemo">
    <parameter name="browser" value="chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <parameter name="platform" value="Windows 11"/>
    <parameter name="testName" value="SimpleFormDemo"/>
    <parameter name="buildName" value="Selenium101-Build"/>
    <classes>
      <class name="tests.SimpleFormDemoTest"/>
    </classes>
  </test>

  <test name="DragSlider">
    <parameter name="browser" value="chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <parameter name="platform" value="Windows 11"/>
    <parameter name="testName" value="DragSliderTest"/>
    <parameter name="buildName" value="Selenium101-Build"/>
    <classes>
      <class name="tests.DragAndDropSliderTest"/>
    </classes>
  </test>

  <test name="InputForm">
    <parameter name="browser" value="chrome"/>
    <parameter name="browserVersion" value="latest"/>
    <parameter name="platform" value="Windows 11"/>
    <parameter name="testName" value="InputFormSubmitTest"/>
    <parameter name="buildName" value="Selenium101-Build"/>
    <classes>
      <class name="tests.InputFormSubmitTest"/>
    </classes>
  </test>
</suite>